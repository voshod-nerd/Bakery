$(function () {

    $('#slider.owl-carousel').owlCarousel({
//        animateOut: 'slideOutDown',
//        animateIn: 'flipInX',
        animateOut: 'fadeOut',
        animateIn: 'fadeIn',
        items: 1,
        margin: 0,
//        stagePadding: 30,
        // smartSpeed: 450,
        nav: true,
        dots: true,
        autoplay: false,
        autoplayTimeout: 6000,
        autoplayHoverPause: true, //Пауза при навидении мыши
        loop: true,
        lazyLoad: true
    });

//    


    $('.menu_btn').click(function () {
        $('.product_menu').toggle();
    });
    
    
           $('.tab').click(function(){
            $('.tab').removeClass('current');
            $(this).addClass('current');
        })
        $('.tab').click(function(){
            var data_tab = $(this).data('stopping');    
            $('.content').each(function(){
                var item_data_tab = $(this).data('stopping');
                if(data_tab === item_data_tab){
                    $(this).show();
                }
                else{
                    $(this).hide();
                }
            });
        });
        
        
        // animate 3 steps
    if ($(window).width() > 1190) {

        var timerId = setInterval(SetClass, 200);
        var catalog_items = $('#catalog');
        var triggers_top = catalog_items.offset()['top'] + 150;
        function SetClass() {
            if ($(window).scrollTop() + $(window).height() >= triggers_top) {
                catalog_items.addClass('animate');
                clearInterval(timerId);
            }
        }
    }

        
        
        
//    $('.feature .title').click(function(){
//        $('.feature .descr').removeClass('active');
//        $(this).next('.descr').addClass('active');
//    }) 
//    
    

});

